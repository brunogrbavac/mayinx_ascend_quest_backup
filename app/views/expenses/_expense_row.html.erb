<tr class="hover:bg-gray-100" data-controller="inline-edit" data-expense-id="<%= expense.id %>">
  <% expense.table_row_cells.each do |table_row_cell| %>
    <td class="p-2"><%= table_row_cell %></td>
  <% end %>
  <td>
    <div class="flex space-x-2">
      <%= link_to 'Show', expense_path(expense), class: "btn btn-info btn-sm" %>
      <%# <%= link_to 'Edit', edit_expense_path(expense), class: "btn btn-warning btn-sm" %> 
      <button data-action="click->inline-edit#edit" class="btn btn-warning btn-sm">Edit</button>
      <%= link_to 'Delete', expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-error btn-sm" %>
    </div>
  </td>
</tr>